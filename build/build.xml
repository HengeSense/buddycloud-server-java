<?xml version="1.0" encoding="UTF-8"?>
<project name="buddycloud Channel server" default="dist" basedir=".">
    <description>bc channel server. Work in progress versoin.</description>
    <!--set global properties for this build-->
    <property name="bin" location="../src/bin"/>
    <property name="src" location="../src"/>
    <property name="build" location="classes"/>
    <property name="dist" location="../target"/>
    <property name="docs" location="${dist}/docs"/>
    <property name="docsapi" location="docs/api"/>
    <property name="libs" location="lib"/>

    <target name="clean">
        <!--Delete created directory trees-->
        <delete dir="${build}" includeEmptyDirs="true"/>
        <delete dir="${dist}" includeEmptyDirs="true"/>
    </target>
    <target name="clean_classes">
        <!--Delete created directory trees-->
        <delete dir="${build}" includeEmptyDirs="true"/>
    </target>
    <target name="init">
        <!--creates the build directory-->
        <mkdir dir="${build}"/>
        <mkdir dir="${dist}"/>
        <mkdir dir="${dist}/lib"/>
    </target>
    <target name="build" depends="init">
        <!--Compiles the java code from ${src} directory into ${build} directory-->
        <javac destdir="${build}"
            debug="on"
            source="1.5"
        >
            <src path="${src}"/>
            <exclude name="**/*Test.java"/>
            <exclude name="**/Test*.java"/>
            <classpath path="lib/concurrentlinkedhashmap-lru-1.2.jar"/>
            <classpath path="lib/dom4j-1.6.1.jar"/>
            <classpath path="lib/jedis-2.0.0.jar"/>
            <classpath path="lib/libidn-1.15.jar"/>
            <classpath path="lib/log4j-1.2.16.jar"/>
        	<classpath path="lib/mongo-2.7.2.jar"/>
            <classpath path="lib/slf4j-api-1.5.8.jar"/>
        	<classpath path="lib/slf4j-log4j12-1.5.8.jar"/>
    		<classpath path="lib/tinder-1.2.2.jar"/>
        	<classpath path="lib/whack.jar"/>
        	<classpath path="lib/xpp3.jar"/>
        	        	
        </javac>
    </target>
    <target name="dist" depends="build">
        <!--Put everything in ${build} into the MyProject-${DSTAMP}.jar file-->
        <tstamp/>
        <jar jarfile="${dist}/lib/bc.channelserver.jar" basedir="${build}">
            <zipgroupfileset dir="${libs}" includes="*.jar"/>
        	<manifest>
        	   <attribute name="Main-Class" value="org.buddycloud.channelserver.Main"/>
        	</manifest>
        </jar>
        <!-- Copy bin dir 
        <copy todir="${dist}/bin">
            <fileset dir="${bin}" includes="**/*" />
        </copy>-->
        <antcall target="clean_classes"/>
    </target>
</project>